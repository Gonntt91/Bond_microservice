generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRESQL_DATABASE_URL")
}



model Bond {
  id        Int      @id @default(autoincrement())
  userId    String   // References User _id from auth (MongoDB)
  amount    Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
